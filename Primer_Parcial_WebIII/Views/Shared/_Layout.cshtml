<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimerParcial</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrimerParcial.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PrimerParcial</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                <footer class="footer mt-auto py-3 bg-light border-top">
                                    <div class="container text-center">
                                        <span class="text-muted">&copy; 2025 - PrimerParcial</span>
                                    </div>
                                </footer>
                                <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                                    <div class="container-fluid">
                                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PrimerParcial</a>
                                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                            <span class="navbar-toggler-icon"></span>
                                        </button>
                                        <div class="collapse navbar-collapse" id="navbarNav">
                                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Categorías</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-area="" asp-controller="Recipes" asp-action="Index">Recetas</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" asp-area="" asp-controller="Ingredients" asp-action="Index">Ingredientes</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </nav>
                                @inherits LayoutComponentBase

                                <div class="page">
                                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                                        <div class="container-fluid">
                                            <a class="navbar-brand" href="">PrimerParcial</a>
                                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                                <span class="navbar-toggler-icon"></span>
                                            </button>
                                            <div class="collapse navbar-collapse" id="navbarNav">
                                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                                    <li class="nav-item">
                                                        <NavLink class="nav-link" href="">Inicio</NavLink>
                                                    </li>
                                                    <li class="nav-item">
                                                        <NavLink class="nav-link" href="categories">Categorías</NavLink>
                                                    </li>
                                                    <li class="nav-item">
                                                        <NavLink class="nav-link" href="recipes">Recetas</NavLink>
                                                    </li>
                                                    <li class="nav-item">
                                                        <NavLink class="nav-link" href="ingredients">Ingredientes</NavLink>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </nav>
                                    <div class="container mt-4">
                                        @Body
                                    </div>
                                    <footer class="footer mt-auto py-3 bg-light border-top">
                                        <div class="container text-center">
                                            <span class="text-muted">&copy; 2025 - PrimerParcial</span>
                                        </div>
                                    </footer>
                                </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PrimerParcial - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
